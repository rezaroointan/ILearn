@model Core.DTOs.Account.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>

<body class="text-center">

    <main class="form-signin">
        <form method="post">
            <img class="mb-4" src="~/images/bootstrap-logo.svg" alt="" width="72" height="57">
            <h1 class="h3 mb-3 fw-normal">ورود به سایت</h1>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" id="returnUrl" value="@ViewBag.ReturnUrl" />

            <div class="form-floating">
                <input asp-for="Email" dir="ltr" type="email" class="form-control" placeholder="name@example.com">
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" dir="ltr" type="password" class="form-control" placeholder="Password">
                <label asp-for="Password">کلمه عبور</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="checkbox mb-3 text-end">
                <label>
                    <input asp-for="RememberMe" type="checkbox"> به خاطر بسپار
                </label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">ورود</button>
        </form>
        <script src="lib\bootstrap\dist\js\bootstrap.min.js"></script>
    </main>
</body>

</html>